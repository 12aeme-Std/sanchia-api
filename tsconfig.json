{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["express"],
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@config/*": ["./src/config/*"],
            "@user/*": ["./src/user/*"],
            "@auth/*": ["./src/auth/*"],
            "@product/*": ["./src/product/*"],
            "@common/*": ["./src/common/*"],
            "@category/*": ["./src/category/*"],
            "@warehouse/*": ["./src/warehouse/*"],
            "@machine/*": ["./src/machine/*"],
            "@recipe/*": ["./src/recipe/*"]
        }
    },
}
